#footer.footer.row
  .container

    //- Footer top content
    .row.footer__content
      .col-md-4.footer__content__socials
        .footer__content__socials__name
          p.name Kênh thông tin từ chúng tôi:
        include ../pug/pug_mixin/footer
        .footer__content__socials__icon
          +footer('Facebook')(class="fa-facebook-f")
          +footer('Youtube')(class="fa-youtube")
          +footer('Pinterest')(class="fa-tumblr")
          +footer('Vimeo')(class="fa-vimeo-v")
          
      .col-md-2.footer__content__email
        p.name Đăng ký nhận email từ chúng tôi
      .col-md-6.footer__content__button
        input.textbox.footer__content__button__textbox(type='text')
        i.fab.fa-telegram-plane
    hr

    //- About us
    .row.footer__about
      .col-md-4.footer__about__title
        .footer__about__title__name
          p.main Green
            span Shop
          p.text Món quà từ thiên nhiên
          br
          p Green shop được thành lập từ 8/2010 được sự tin tưởng của khách hàng trong suốt thời gian hoạt động đến nay cửa hàng ngày một phát triển
          i.fas.fa-mobile-alt 
            a Điện thoại : (84-4) 66.558.868
          i.far.fa-envelope Email: info@dkt.com.vn

      .col-md-8.footer__about__customer
        .footer__about__customer__infor
          include ../pug/pug_mixin/footer_customer

          +footer_customer('Thông tin khách hàng', 'Tài khoản của tôi', 'Sản phẩm yêu thích', 'Lịch sử mua hàng', 'Chính sách đổi trả', 'Góp ý, khiếu nại')

        .footer__about__customer__service
          +footer_customer('Hỗ trợ dịch vụ', 'Hệ thống cửa hàng', 'Hướng dẫn mua hàng', 'Hướng dẫn thanh toán', 'Tích điểm đổi quà', 'Câu hỏi thường gặp')

        .footer__about__customer__discount
          +footer_customer('Chính sách ưu đãi', 'Chính sách giao hàng', 'Chính sách đổi trả sản phẩm', 'Chính sách bảo hành', 'Giới thiệu sản phẩm mới', 'Chính sách trả góp')

        .footer__about__customer__news
          +footer_customer('Tin tức', 'Tin mới', 'Khuyến mãi', 'Tuyển dụng', 'Dowload', 'Tags')
    hr

    //- Contact
    .row.footer__contact
      .col-md-8
        .footer__contact__left
          ul
            -var arr = ['Sitemap', 'Danh mục sản phẩm', 'Hợp tác', 'Thông tin liên hệ', 'Câu hỏi thường gặp']
              each value in arr
                li
                  i= value
      .col-md-4
        .footer__contact__right
          ul
            -var a= ["fa-cc-visa", "fa-cc-mastercard", "fa-cc-paypal", "fa-cc-discover"]
              -for(var i = 0; i < a.length; i++)
                i.fab(class= a[i])

    //- Design
    .design.row
      p Thiết kế bởi  Bizweb &copy;